<div class=" container border border-light bg-light py-3 my-5 shadow-lg">
<div class="d-flex justify-content-center mt-3">
  <h1>Restaurants</h1>
</div>
<div class="d-flex justify-content-center m-3">
  <ul class="list-group list-group-flush">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex justify-content-center list-group-item-secondary px-5 mb-1"><%= link_to restaurant.name, restaurant_path(restaurant) %> </li>
      <% end %>
  </ul>
</div>
<div class="d-flex justify-content-center">
  <%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary btn-lg m-3" %>
</div>
</div>

<div class=" container border border-light bg-light py-5 my-5 shadow-lg">
  <div class="d-flex justify-content-center">
    <h1> <%= @restaurant.name %></h1>
  </div>
  <div class="d-flex justify-content-center">
    <h2> <%= @restaurant.category %></h2>
  </div>
  <div class="d-flex justify-content-center mt-5">
    <p> <%= "Address: #{@restaurant.address}" %></p>
  </div>
  <div class="d-flex justify-content-center">
    <p> <%= "Phone: #{@restaurant.phone_number}" %></p>
  </div>
  <ul class="list-group px-5">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item d-flex justify-content-center mb-3">
        <%= review.content %> <%= '⭐' * review.rating %>
      </li>
    <% end %>
  </ul>
  <div class="d-flex justify-content-center mt-5 mb-3">
    <h1>Leave a Review</h1>
  </div>
  <div class="d-flex-inline justify-content-center px-5 mb-5">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, as: :text %>
      <%= f.input :rating, collection: 1..5 %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mb-3">
    <%= link_to 'See all restaurants', restaurants_path , class: "btn btn-primary btn-lg"%>
  </div>
</div>
